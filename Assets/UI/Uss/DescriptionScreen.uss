.closeButton {
    transition-duration: 0.2s;
    background-color: rgba(0, 0, 0, 0);
}

.closeButton:hover {
    scale: 1.1 1.1;
    background-color: rgba(166, 166, 166, 0.5);
}

.closeButton:active {
    scale: 0.9 0.9;
}

.startButton {
    transition-duration: 0.2s;
    background-color: rgba(0, 0, 0, 0);
}

.startButton:hover {
    background-color: rgba(166, 166, 166, 0.5);
    scale: 1.1 1.1;
}

.startButton:active {
    scale: 0.9 1;
}
